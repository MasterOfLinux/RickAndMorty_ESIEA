<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CharacterDetail"
    android:layout_marginTop="25sp"
    tools:showIn="@layout/activity_character_detail">


<androidx.cardview.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="18dp"
    android:elevation="15dp"
    android:outlineSpotShadowColor="@color/teal_700"
    android:scrollbarStyle="insideInset"
    app:cardUseCompatPadding="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            >
        </TextView>


        <TextView
            android:id="@+id/char_d_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="ali"
            >
        </TextView>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            >
        </TextView>


        <TextView
            android:id="@+id/char_d_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="ali"
            >
        </TextView>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            >
        </TextView>


        <TextView
            android:id="@+id/char_d_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="ali"
            >
        </TextView>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Species"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            >
        </TextView>


        <TextView
            android:id="@+id/char_d_species"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="ali"
            >
        </TextView>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            >
        </TextView>


        <TextView
            android:id="@+id/char_d_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="ali"
            >
        </TextView>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origin"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            >
        </TextView>


        <TextView
            android:id="@+id/char_d_origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="ali"
            >
        </TextView>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            >
        </TextView>


        <TextView
            android:id="@+id/char_d_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="ali"
            >
        </TextView>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:background="?android:attr/listDivider" />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylcerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />












</LinearLayout>

</androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>